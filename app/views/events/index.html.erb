<!--embed map-->
<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>
<!--end map-->
<p id="notice"><%= notice %></p>

<div class="container-fluid events-page">
  <div class="row header">
    <div class="col-md-8">
    <h1 class="main-title">Events Happening Right Now:</h1>
    </div>
    <div class="col-md-4 new-event-button">
      <div class="btn-group" align="center">
        <%= button_to('New Event', new_event_path, method: :get, :class => 'btn btn-large btn-primary sexy-button')  %>
      </div>
    </div>
  </div>

  <div class="row events-table col-md-6 col-md-offset-3">

    <% @events.each do |event| %>
    <div class="panel panel-default">
      <div class="panel-heading"><%= event.name %></div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-4">
            <b>Location:</b> <%= event.location %>
            <br>
            <b>Game:</b> <%= event.type %>
            <br>
            <b>Start time:</b> <%= event.start %>
            <br>
            <b>End time:</b> <%= event.end %>
          </div>
          <div class="col-md-6 col-md-offset-2">
            <div style="width:100%;max-width:100%;overflow:hidden;height:auto;color:red;">
              <div id="embed-map-canvas" style="height:100%; width:100%;max-width:100%;">
                <iframe style="height:100%;width:100%;border:0;" frameborder="0" src="https://maps.google.com/maps?f=q&source=s_q&hl=en&geocode=&q=33.129861,+-111.239662&aq=&sll=33.605415,-112.125051&sspn=0.984773,2.099762&ie=UTF8&t=h&z=14&ll=33.129861,-111.239662&output=embed"></iframe>
              </div>
              <style>#embed-map-canvas .text-marker{max-width:none!important;background:none!important;}img{max-width:none}</style>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>

<!--JS-->
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  // TO DO: Center map on Waterloo;
  // handler.fitMapToBounds();
  });
</script>
<!--JS ENDS-->
